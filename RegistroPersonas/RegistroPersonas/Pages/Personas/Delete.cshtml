@page
@model RegistroPersonas.Pages.Personas.DeleteModel

@{
    ViewData["Title"] = "Eliminar Persona";
}

<div class="d-flex justify-content-between mb-2 align-items-center">
    <div>
        <h1>Eliminar Persona</h1>
    </div>
    <div>
        <div>
            <a asp-page="./Index"><button class="btn btn-outline-dark">Volver</button></a>
        </div>
    </div>
</div>

<h4 class="text-danger">¿Estas seguro que quieres eliminar el registro?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.sexo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.nacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.nacimiento)
        </dd>
    </dl>
    
    <form method="post" class="my-3">
        <input type="hidden" asp-for="Persona.id" />
        <input type="submit" value="Eliminar Persona" class="btn btn-danger p-3 my-1" /> 
    </form>
</div>
