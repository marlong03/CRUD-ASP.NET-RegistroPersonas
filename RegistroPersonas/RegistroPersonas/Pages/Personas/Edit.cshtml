@page
@model RegistroPersonas.Pages.Personas.EditModel

@{
    ViewData["Title"] = "Editar Persona";
}
<div class="d-flex justify-content-between mb-2 align-items-center">
    <div>
        <h1>Editar Persona</h1>
    </div>
    <div>
        <div>
            <a asp-page="./Index"><button class="btn btn-outline-dark">Volver</button></a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Persona.id" />
            <div class="form-group">
                <label asp-for="Persona.nombre" class="control-label text-capitalize"></label>
                <input asp-for="Persona.nombre" class="form-control border border-dark" />
                <span asp-validation-for="Persona.nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.sexo" class="control-label text-capitalize"></label>
                <input asp-for="Persona.sexo" class="form-control border border-dark" />
                <span asp-validation-for="Persona.sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.nacimiento" class="control-label text-capitalize"></label>
                <input asp-for="Persona.nacimiento" class="form-control border border-dark" />
                <span asp-validation-for="Persona.nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Editar Persona" class="btn btn-primary w-100 my-1 py-3" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
